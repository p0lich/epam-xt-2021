@{
    Layout = @"~/Pages/Layout/_BasicLayout.cshtml";
}

<form class="Registration_From" method="post">
    <div class="Input_Field">
        <p>Name: </p><input type="text" required/>
    </div>

    <div class="Input_Field">
        <p>Date of birth: </p><input type="date" required/>
    </div>

    <div class="Input_Field">
        <p>Password: </p><input type="password" required/>
    </div>

    <div class="Input_Field">
        <p>Repeat Password: </p><input type="password" required/>
    </div>

    <input type="submit" />
</form>
